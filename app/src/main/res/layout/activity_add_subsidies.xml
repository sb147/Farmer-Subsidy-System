<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSubsidies">

    <TextView
        android:id="@+id/tHeading"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="ADD SUBSIDIES"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText

        android:gravity="center"
        android:hint="Subsidy Name"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tHeading"
        android:id="@+id/eSubsidyName"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />


    <EditText
        android:inputType="numberDecimal"
        android:gravity="center"
        android:hint="Amount per Hectare"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/eSubsidyName"
        android:id="@+id/eAmountPerHectare"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:gravity="center"
        android:hint="Subsidy Name"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/eAmountPerHectare"
        android:id="@+id/sSubsidyType"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="submit"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>